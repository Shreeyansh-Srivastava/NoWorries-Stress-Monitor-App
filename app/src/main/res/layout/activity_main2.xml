<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity2"
    android:background="@color/white">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/r1_card"
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:elevation="16dp"
                app:cardCornerRadius="16dp"
                android:layout_gravity="left"
                android:layout_margin="8dp"
                app:cardBackgroundColor="@color/purple_200"
                app:cardElevation="500dp">

                <TextView
                    android:id="@+id/r1_text"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    android:text="How much sleep do you get on an average these days ?"
                    />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/s1_card"
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:elevation="16dp"
                app:cardCornerRadius="16dp"
                android:layout_margin="8dp"
                android:layout_gravity="right"
                app:cardBackgroundColor="@color/teal_200"
                app:cardElevation="500dp">

                <TextView
                    android:id="@+id/s1_text"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    android:text="Hello World"
                    />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/r2_card"
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:elevation="16dp"
                app:cardCornerRadius="16dp"
                android:layout_gravity="left"
                android:layout_margin="8dp"
                app:cardBackgroundColor="@color/purple_200"
                app:cardElevation="500dp">

                <TextView
                    android:id="@+id/r2_text"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    android:text="Did official phone calls made you feel anxious these days ?"
                    />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/s2_card"
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:elevation="16dp"
                app:cardCornerRadius="16dp"
                android:layout_margin="8dp"
                android:layout_gravity="right"
                app:cardBackgroundColor="@color/teal_200"
