                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    android:text="Hello World"
                    />
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/r3_card"
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:elevation="16dp"
                app:cardCornerRadius="16dp"
                android:layout_gravity="left"
                android:layout_margin="8dp"
                app:cardBackgroundColor="@color/purple_200"
                app:cardElevation="500dp">

                <TextView
                    android:id="@+id/r3_text"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    android:text="How many hours of aerobic exercises do you perform in a day ?"
                    />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/s3_card"
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:elevation="16dp"
                app:cardCornerRadius="16dp"
                android:layout_margin="8dp"
                android:layout_gravity="right"
                app:cardBackgroundColor="@color/teal_200"
                app:cardElevation="500dp">

                <TextView
                    android:id="@+id/s3_text"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    android:text="Hello World"
                    />
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/r4_card"
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:elevation="16dp"
                app:cardCornerRadius="16dp"
                android:layout_gravity="left"
                android:layout_margin="8dp"
                app:cardBackgroundColor="@color/purple_200"
                app:cardElevation="500dp">

                <TextView
                    android:id="@+id/r4_text"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    android:text="Did you enjoyed your favourite musics this week ?"
                    />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/s4_card"
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:elevation="16dp"
                app:cardCornerRadius="16dp"
                android:layout_margin="8dp"
                android:layout_gravity="right"
                app:cardBackgroundColor="@color/teal_200"
                app:cardElevation="500dp">

                <TextView
                    android:id="@+id/s4_text"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    android:text="Hello World"
                    />
            </com.google.android.material.card.MaterialCardView><com.google.android.material.card.MaterialCardView
            android:id="@+id/r5_card"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:elevation="16dp"
            app:cardCornerRadius="16dp"
            android:layout_gravity="left"
            android:layout_margin="8dp"
            app:cardBackgroundColor="@color/purple_200"
            app:cardElevation="500dp">

            <TextView
                android:id="@+id/r5_text"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:text="Did you stayed awake late night for work this week ?"
                />
        </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/s5_card"
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:elevation="16dp"
                app:cardCornerRadius="16dp"
                android:layout_margin="8dp"
